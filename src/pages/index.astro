---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Picture } from 'astro:assets';
import Me from '../assets/es.png';
---

<Layout>
    <article class="grid items-center h-full w-4/5">
        <p class="sm:text-6xl text-4xl font-bold text-text mb-12 ml-8 h-min">
            About Me:
        </p>
        <div class="flex sm:flex-row flex-col justify-center items-center gap-12">
            <!-- <Picture src={Me} alt="Amaterasu" class="w-2/3 max-h-max rounded-lg" formats={["avif"]} /> -->
            <Image src={Me} alt="Amaterasu" loading="lazy" decoding="async" class="w-1/3 rounded-lg" />
            <div class="flex justify-center flex-col">
                <p
                    class="text-text fancy-text text-outline font-bold uppercase sm:text-6xl text-6xl ml-[1ch] h-[0.75em]"
                >
                    Visionary
                </p>
                <p
                    class="text-text fancy-text text-outline font-bold uppercase sm:text-6xl text-6xl ml-[2ch] h-[0.75em]"
                >
                    Entrepreneur
                </p>
                <p
                    class="text-text fancy-text text-outline font-bold uppercase sm:text-6xl text-6xl ml-[3ch] h-[0.75em]"
                >
                    Backend -
                </p>
                <p
                    class="text-text fancy-text text-outline font-bold uppercase sm:text-6xl text-6xl ml-[4ch] h-[0.75em]"
                >
                    Enthusiast
                </p>
            </div>
        </div>
    </article>
</Layout>

<style>
.text-outline {
    background-clip: text;
    background-image: transparent;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-color: #e0fafe;
    -webkit-text-stroke-width: 0.1rem;
}

.fancy-text {
    font-family: Poppins;
    max-width: fit-content;
    z-index: 1;
}

.fancy-text::before {
    content: attr(data-text);
    position: absolute;
    background-clip: text;
    margin-top: 0.5rem;
    margin-left: 0.5rem;
    background-image: transparent;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-color: #e0fafe;
    -webkit-text-stroke-width: 0.1rem;
}
</style>
